{
  "manifest_version": 2,
  "name": "GitHub projects (beta) Storypoints counter",
  "version": "1.0",
  "description": "See the total storypoints in GitHub projects beta",
  "permissions": ["*://github.com/*/*"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
